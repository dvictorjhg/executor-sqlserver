                  "type": ["boolean", "string"]
                },
                "quoteHeaders": {
                  "type": ["boolean", "string"]
                },
                "escape": {
                  "type": "string"
                },
                "includeEndRowDelimiter": {
                  "type": "boolean"
                },
                "writeBOM": {
                  "type": "boolean"
                }
              }
